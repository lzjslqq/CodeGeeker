.menu {
    margin: 20rpx 200rpx;
    width: 350rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 32rpx;
    color: #888;
    text-align: left;
    border-bottom: 2rpx solid #8f8c8c;
}

page {
    width: 750rpx;
}

.cate {
    position: fixed;
    padding: 0 20rpx;
    width: 710rpx;
    height: 100rpx;
    top: 0;
    z-index: 9;
    background-color: #fff;
    display: flex;
    /* display: inline-block; */
    white-space: nowrap;
    overflow-x: scroll;
}

.cate::-webkit-scrollbar {
    display: none;
}

.cate .cate-item {
    height: 80rpx;
    width: fit-content;
    line-height: 100rpx;
    margin: 0 20rpx;
    font-size: 28rpx;
    color: #666666;
    text-align: center;
}

.cate .cate-item.end {
    width: 50rpx;
}

.cate .cate-item.selected {
    border-bottom: 6rpx solid #008CD7;
    color: #008CD7;
    font-weight: bold;
}

.list {
    padding: 0;
    margin-top: 108rpx;
    width: 750rpx;
    position: relative;
    display: flex;
    flex-direction: row;
}

.list .list-left {
    position: absolute;
    top: 0;
    left: 10rpx;
}

.list .list-right {
    position: absolute;
    top: 0;
    right: 10rpx;
}

.list .item {
    width: 100%;
    position: relative;
}

.list .item .photo {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.list .item .grapher {
    height: 40rpx;
    position: absolute;
    bottom: 20rpx;
    left: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.list .item .grapher image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
}

.list .item .grapher view {
    line-height: 40rpx;
    margin-left: 20rpx;
    font-size: 24rpx;
    color: #fff;
}

.list .item .favcount {
    line-height: 40rpx;
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
    font-size: 24rpx;
    color: #fff;
}