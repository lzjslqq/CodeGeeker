.menu {
    margin: 20rpx 200rpx;
    width: 350rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 32rpx;
    color: #888;
    text-align: left;
    border-bottom: 2rpx solid #8f8c8c;
}

page {
    width: 750rpx;
}

.cate {
    position: fixed;
    margin: 0 10rpx;
    width: 730rpx;
    height: 100rpx;
    top: 0;
    z-index: 9;
    background-color: #fff;
    display: flex;
    white-space: nowrap;
    overflow-x: scroll;
}

.cate::-webkit-scrollbar {
    display: none;
}

.cate .cate-item {
    height: 80rpx;
    width: fit-content;
    line-height: 100rpx;
    margin: 0 20rpx;
    font-size: 28rpx;
    color: #666666;
    text-align: center;
}

.cate .cate-item.end {
    width: 100rpx;
    height: 100%;
    margin-right: 100rpx;
}

.cate .cate-item.selected {
    border-bottom: 6rpx solid #008CD7;
    color: #008CD7;
    font-weight: bold;
}

.list {
    padding: 0;
    margin-top: 108rpx;
    width: 750rpx;
    position: relative;
    display: flex;
    flex-direction: row;
}

.list .list-left {
    position: absolute;
    top: 0;
    left: 10rpx;
}

.list .list-right {
    position: absolute;
    top: 0;
    right: 10rpx;
}

.list .item {
    width: 100%;
    position: relative;
    margin-bottom: 90rpx;
}

.list .item .photo {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.list .item .title {
    position: absolute;
    left: 20rpx;
    bottom: -40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #2E2B48;
}

.list .item .stat {
    position: relative;
    bottom: -40rpx;
    line-height: 32rpx;
    font-size: 24rpx;
    display: flex;
}

.list .item .stat .fav {
    position: absolute;
    left: 20rpx;
    color: #999999;
}

.list .item .stat .name {
    color: #FF8D1D;
    position: absolute;
    line-height: 32rpx;
    right: 60rpx;
}

.list .item .stat .avatar {
    position: absolute;
    height: 32rpx;
    width: 32rpx;
    border-radius: 16rpx;
    right: 20rpx;
}