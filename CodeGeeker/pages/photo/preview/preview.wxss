page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    position: relative;
}

.container .shadow {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.9;
    z-index: 1;
}

.container .img {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 9;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.container .img image {
    width: 100%;
}