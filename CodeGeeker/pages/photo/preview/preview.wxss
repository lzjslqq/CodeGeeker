page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}

.container .img-pane {
    /* position: absolute; */
    /* top: 0; */
    width: 100%;
}

.container .img-pane.hide {
    height: 0;
}

.container .cmt-pane {
    position: absolute;
    top: 100%;
    padding: 0 30rpx;
    width: 690rpx;
}

.container .cmt-pane .comment {
    line-height: 40rpx;
    font-size: 28rpx;
    color: #888;
}

.trans {
    position: fixed;
    width: 100rpx;
    height: 40rpx;
    line-height: 40rpx;
    z-index: 99;
    top: 50rpx;
    right: 50rpx;
    background: lightskyblue;
    text-align: center;
    border-radius: 8rpx;
}