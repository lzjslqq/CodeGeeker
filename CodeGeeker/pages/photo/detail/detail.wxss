.container {
    height: 100%;
    width: 100%;
}

.grapher {
    position: absolute;
    top: 40rpx;
    left: 40rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
    z-index: 10;
}

.vshow {
    position: absolute;
    top: 40rpx;
    right: 40rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
    z-index: 10;
}

.info {
    width: 100%;
    position: fixed;
    bottom: 0;
    z-index: 9;
    background-color: rgba(26, 26, 26, 0.4);
}

.showinfo {
    animation-name: showinfo;
    animation-duration: 300ms;
    animation-fill-mode: forwards;
    animation-timing-function: ease-in-out;
}

.hideinfo {
    animation-name: hideinfo;
    animation-duration: 300ms;
    animation-fill-mode: forwards;
    animation-timing-function: ease-in-out;
}

@keyframes showinfo {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

@keyframes hideinfo {
    from {
        opacity: 1;
    }
    to {
        opacity: 0.4;
    }
}

.info .title {
    margin-left: 30rpx;
    width: 690rpx;
    line-height: 42rpx;
    font-size: 36rpx;
    color: #fff;
