/********************  *******************/

page {
    width: 100%;
    height: 100%;
}

.flip-container {
    width: 100%;
    height: 100%;
    perspective: 1000;
}

.flipper {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
}

.flipper .front {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: #fff;
    z-index: 2;
}

.flipper .front image {
    padding: 20rpx;
    width: 710rpx;
}

.flipper .back {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: #fff;
    /* transform: rotateY(180deg); */
}

.flipper .back .comment-list {
    padding: 0 30rpx;
    width: 690rpx;
}

.flipper .back .comment-list .comment {
    line-height: 40rpx;
    font-size: 28rpx;
    color: #888;
}