page {
    width: 100%;
    background-color: #008CD7;
}

.container {
    width: 100%;
    height: 100%;
    background-color: #fff;
    border-radius: 20rpx 20rpx 0 0;
}

.item {
    width: 100%;
    height: 180rpx;
    border-radius: 20rpx 20rpx 0 0;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.item .avatar {
    margin: 40rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}

.item .detail {
    width: 480rpx;
    height: 100%;
}

.item .detail .name {
    line-height: 48rpx;
    margin: 48rpx 0 0 0;
    font-size: 32rpx;
    color: #000;
}

.item .detail .stat {
    line-height: 30rpx;
    margin: 10rpx 0 0 0;
    font-size: 24rpx;
    color: #999999;
}

.item .focus {
    margin: 70rpx 40rpx 70rpx 10rpx;
    /* margin-top: 70rpx;
    margin-right: 40rpx; */
    width: 40rpx;
    height: 40rpx;
}