/*************** tab 2 ******************/

.list-2 {
    padding: 0 30rpx;
    position: absolute;
    left: 750rpx;
    width: 690rpx;
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
}

.list-2.show {
    left: 0rpx;
}

.list-2 .item {
    width: 330rpx;
    height: 310rpx;
}

.list-2 .item image {
    width: 330rpx;
    height: 180rpx;
    border-radius: 10rpx;
}

.list-2 .item .info {
    padding: 0 10rpx;
    width: 310rpx;
}

.list-2 .item .info .title {
    width: 100%;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #1F2528;
}

.list-2 .item .info .other {
    width: 100%;
    line-height: 30rpx;
    font-size: 24rpx;
    color: #999999;
    position: relative;
    display: flex;
    flex-direction: row;
}

.list-2 .item .info .other .count {
    position: absolute;
    left: 0;
}

.list-2 .item .info .other .time {
    position: absolute;
    right: 0;
}