page {
    width: 100%;
}

.container {
    width: 100%;
    position: relative;
}

.shadow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 630rpx;
    overflow: hidden;
    z-index: -2;
}

.shadow image {
    width: 100%;
}

.opacity {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 630rpx;
    z-index: -1;
    background-color: #fff;
    opacity: 0.9;
}

.shim-100 {
    width: 100%;
    height: 100px;
}

.focus {
    position: fixed;
    bottom: 0rpx;
    height: 100rpx;
    width: 100%;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #fff;
    font-weight: bold;
    text-align: center;
    letter-spacing: 10rpx;
    background: -webkit-linear-gradient(left, #ff8d1d, #ffb33a);
    background: -o-linear-gradient(right, #ff8d1d, #ffb33a);
    background: -moz-linear-gradient(right, #ff8d1d, #ffb33a);
    background: linear-gradient(to right, #ff8d1d, #ffb33a);
}

.focused {
    position: fixed;
    bottom: 0rpx;
    height: 100rpx;
    width: 100%;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #fff;
    font-weight: bold;
    text-align: center;
    letter-spacing: 10rpx;
    background: -webkit-linear-gradient(left, #878595, #A9A8B2);
    background: -o-linear-gradient(right, #878595, #A9A8B2);
    background: -moz-linear-gradient(right, #878595, #A9A8B2);
    background: linear-gradient(to right, #878595, #A9A8B2);
}

.grapher-pane {
    width: 100%;
    height: 630rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.grapher-pane .avatar {
    margin: 100rpx 286rpx 0 284rpx;
    width: 180rpx;
    height: 180rpx;
    border-radius: 90rpx;
}

.grapher-pane .name {
    margin-top: 40rpx;
    line-height: 80rpx;
    width: 100%;
    font-size: 42rpx;
    color: #333333;
    font-weight: bold;
    text-align: center;
}

.grapher-pane .stat {
    margin: 20rpx 0;
    height: 30rpx;
    width: 100%;
    font-size: 28rpx;
    color: #AA7D50;
    text-align: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.grapher-pane .stat .fans {
    padding: 0 20rpx 0 0;
    line-height: 30rpx;
    border-right: #ccc 3rpx solid;
}

.grapher-pane .stat .tag {
    padding-left: 20rpx;
    line-height: 30rpx;
}

.grapher-pane .desc {
    line-height: 38rpx;
    padding: 0 40rpx;
    width: 670rpx;
    font-size: 24rpx;
    color: #999999;
    text-align: center;
}

.tabs,
.float-tabs {
    width: 100%;
    height: 110rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    position: relative;
}

.tabs {
    margin-top: -20rpx;
    border-radius: 20rpx 20rpx 0 0;
    z-index: 5;
}

.float-tabs {
    position: fixed;
    top: 0;
    z-index: -3;
}

.float-tabs.hide {
    height: 0;
}

.tabs .tab-1,
.float-tabs .tab-1 {
    width: 374rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    color: #999999;
}

.tabs .tab-2,
.float-tabs .tab-2 {
    width: 376rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    color: #999999;
}

.tabs .selected,
.float-tabs .selected {
    font-size: 32rpx;
    color: #FF8D1D;
    font-weight: bold;
}

.tabs .line1,
.tabs .line2,
.float-tabs .line1,
.float-tabs .line2 {
    position: absolute;
    height: 4rpx;
    width: 50rpx;
    top: 80rpx;
    background-color: #FF8D1D;
}

.tabs .line1,
.float-tabs .line1 {
    left: 162rpx;
}

.tabs .line2,
.float-tabs .line2 {
    right: 162rpx;
}

.list {
    width: 100%;
    height: fit-content;
    margin-bottom: 100rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    z-index: -4;
}


/*************** tab 1 ******************/

.list-1 {
    padding: 0;
    position: absolute;
    width: 750rpx;
    left: 0rpx;
    display: flex;
    flex-direction: row;
}

.list-1.hide {
    left: -750rpx;
}

.list-1 .list-left {
    position: absolute;
    top: 0;
    left: 10rpx;
}

.list-1 .list-right {
    position: absolute;
    top: 0;
    right: 10rpx;
}

.list-1 .item {
    width: 100%;
    position: relative;
}

.list-1 .item .photo {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.list-1 .item .info {
    position: absolute;
    width: 100%;
    bottom: -90rpx;
}

.list-1 .item .info .title {
    margin: 10rpx;
    line-height: 38rpx;
    font-size: 28rpx;
    color: #2E2B48;
}

.list-1 .item .info .stat {
    margin: 0 10rpx;
    height: 30rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    font-size: 24rpx;
    color: #999999;
}

.list-1 .item .info .stat .fav-img {
    position: absolute;
    top: 4rpx;
    left: 0;
    width: 30rpx;
    height: 28rpx;
}

.list-1 .item .info .stat .favcount {
    position: absolute;
    line-height: 38rpx;
    left: 40rpx;
}

.list-1 .item .info .stat .time {
    position: absolute;
    right: 0rpx;
}


