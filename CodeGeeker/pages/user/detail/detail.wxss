.header {
     width: 100%;
     height: 250rpx;
     background: linear-gradient(to bottom, #008cd7, #5d52e2);
}

.body {
     min-height: 880rpx;
     width: 750rpx;
     border-top-left-radius: 20rpx;
     border-top-right-radius: 20rpx;
     background: #fff;
     position: relative;
     top: -20rpx;
     padding: 0 60rpx;
}

.user-img {
     width: 180rpx;
     height: 180rpx;
     border-radius: 180rpx;
     position: relative;
     top: -90rpx;
}

.user-info {
     height: 64rpx;
     width: 630rpx;
}

.user-info-name {
     color: #333;
     font-size: 42rpx;
     line-height: 64rpx;
}
