page {
    width: 750rpx;
}

.list {
    padding: 0;
    margin-top: 20rpx;
    width: 750rpx;
    position: relative;
    display: flex;
    flex-direction: row;
}

.list .list-left {
    position: absolute;
    top: 0;
    left: 10rpx;
}

.list .list-right {
    position: absolute;
    top: 0;
    right: 10rpx;
}

.list .item {
    width: 100%;
    position: relative;
    margin-bottom: 90rpx;
}

.list .item .photo {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.list .item .title {
    position: absolute;
    left: 20rpx;
    bottom: -40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #2E2B48;
}

.list .item .stat {
    position: relative;
    bottom: -40rpx;
    line-height: 32rpx;
    font-size: 24rpx;
    display: flex;
}

.list .item .stat .fav-img {
    position: absolute;
    top: 4rpx;
    left: 20rpx;
    width: 30rpx;
    height: 28rpx;
}

.list .item .stat .fav-count {
    position: absolute;
    left: 60rpx;
    color: #999999;
}

.list .item .stat .name {
    color: #FF8D1D;
    position: absolute;
    line-height: 32rpx;
    right: 60rpx;
}

.list .item .stat .avatar {
    position: absolute;
    height: 32rpx;
    width: 32rpx;
    border-radius: 16rpx;
    right: 20rpx;
}