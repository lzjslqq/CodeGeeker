<view class="container">
     <view class='match-group'>
          <image src="/images/match/vote_min.png"></image>
          <text>2018-6-14 小组赛</text>
     </view>
     <view class="item" wx:for="{{matchList}}" bindtap="gotoMatch" data-mid="{{item.id}}" data-title="{{item.title}}">
          <image class="bgimage" src="{{item.bgimage}}" mode="aspectFill"></image>
          <view class="opacity"></view>
          <view class="title">{{item.title}} 现场图集</view>
          <view class="stat">{{'# ' + item.commentcount + ' 人正在讨论 #'}}</view>
          <image class="home" src="{{item.homepic}}"></image>
          <image class="visit" src="{{item.visitpic}}"></image>
     </view>
</view>