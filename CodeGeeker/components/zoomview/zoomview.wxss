.container {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
}

.container .shadow {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: #000;
    opacity: 0.9;
    z-index: 1;
}

.container .img {
    width: 100%;
    /* height: 100%; */
    position: absolute;
    z-index: 9;
